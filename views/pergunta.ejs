<%- include('partials/header.ejs');  %>
<body>
  <%- include('partials/navbar.ejs'); %>
  
  <div class="container">
    <hr>
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>
    <form method="post" action="/responder">
      <h3>Responda</h3>
      <label class="mt-2 mb-2">Resposta</label>
      <textarea name="corpo" placeholder="Digite sua resposta aqui" class="form-control" style="resize: none"></textarea>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
      <button type="submit" class="btn btn-primary mt-3">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <% respostas.map(resposta => { %>
      <div class="card mb-3 mt-3">
        <div class="card-body mb-2">
          <p><%= resposta.corpo %></p>
        </div>
      </div>
    <% }) %>
  </div>

</body>
<%- include('partials/footer.ejs'); %>
